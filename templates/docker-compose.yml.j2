version: '3'

services:
  teslamate:
    image: teslamate/teslamate:latest
    restart: {{ docker_restart_policy }}
    depends_on:
      - database
    environment:
      - DATABASE_USER={{ postgresql_database_username }}
      - DATABASE_PASS={{ postgresql_database_password }}
      - DATABASE_NAME={{ postgresql_database_name }}
      - DATABASE_HOST=database
      - MQTT_HOST=mosquitto
      - VIRTUAL_HOST={{ fqdn_teslamate }}
      - CHECK_ORIGIN=true
      - TZ={{ teslamate_timezone }}
    volumes:
      - ./import:/opt/app/import
    ports:
      - {{ docker_interface }}:{{ docker_port_teslamate }}:{{ docker_port_teslamate }}
    cap_drop:
      - all

  database:
    image: postgres:{{ postgresql_version }}
    restart: {{ docker_restart_policy }}
    environment:
      - POSTGRES_USER={{ postgresql_database_username }}
      - POSTGRES_PASSWORD={{ postgresql_database_password }}
      - POSTGRES_DB={{ postgresql_database_name }}
    volumes:
      - teslamate-db:/var/lib/postgresql/data

  grafana:
    image: teslamate/grafana:latest
    restart: {{ docker_restart_policy }}
    environment:
      - DATABASE_USER={{ postgresql_database_username }}
      - DATABASE_PASS={{ postgresql_database_password }}
      - DATABASE_NAME={{ postgresql_database_name }}
      - DATABASE_HOST=database
      - GRAFANA_PASSWD={{ grafana_admin_password }}
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_username }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_AUTH_BASIC_ENABLED=true
      - GF_AUTH_ANONYMOUS_ENABLED=false
      - GF_SERVER_ROOT_URL=https://{{ fqdn_grafana }}
    ports:
      - {{ docker_interface }}:{{ docker_port_grafana }}:{{ docker_port_grafana }}
    volumes:
      - teslamate-grafana-data:/var/lib/grafana

  mosquitto:
    image: eclipse-mosquitto:{{ mosquitto_version }}
    restart: {{ docker_restart_policy }}
    ports:
      - {{ docker_interface }}:{{ docker_port_mosquitto }}:{{ docker_port_mosquitto }}
    volumes:
      - mosquitto-conf:/mosquitto/config
      - mosquitto-data:/mosquitto/data

volumes:
    teslamate-db:
    teslamate-grafana-data:
    mosquitto-conf:
    mosquitto-data:
